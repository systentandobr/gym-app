<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme for Compose -->
    <style name="Theme.TadevoltaGym" parent="android:Theme.Material.Light.NoActionBar">
        <!-- Primary brand color -->
        <item name="android:colorPrimary">@color/primary</item>
        <item name="android:colorPrimaryDark">@color/primary</item>
        <item name="android:colorAccent">@color/secondary</item>
        
        <!-- Background -->
        <item name="android:colorBackground">@color/background</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@color/primary</item>
        <item name="android:windowLightStatusBar">true</item>
        
        <!-- Window background -->
        <item name="android:windowBackground">@color/background</item>
    </style>
</resources>
